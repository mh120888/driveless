<% if @friend %>
  <h1><%= @friend.full_name %></h1>

  <p class='lead'>Do you really want to friend <%= @friend.full_name %>?</p>

  <%= form_for @user_friendship, url: user_friendships_path, method: :post do |form| %>
    <%= form.hidden_field :friend_id, value: @friend.id %>
    <%= submit_tag "Add Friend", class: 'btn btn-primary' %>
    <%= link_to "Cancel", profile_path(@friend), class: 'btn' %>
  <% end %>
<% end %>