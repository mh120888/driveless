<!DOCTYPE html>
<html>
<head>
  <title>DriveLess</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <script type="text/javascript" src="http://cdnjs.cloudflare.com/ajax/libs/Chart.js/0.2.0/Chart.min.js"></script>
  <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.9.1.min.js"></script>
  <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/knockout/knockout-2.2.1.js"></script>
  <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/globalize/0.1.1/globalize.min.js"></script>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <ul class="nav navbar-nav">
      <li><%= link_to "DriveLess", root_path %></li>
      <% if user_signed_in? %>
        <li><%= link_to "Feed", feed_path %></li>
        <li><%= link_to 'Fillups', fillups_path %></li>
        <li class="dropdown">
          <a href="#" class="dropdown-toggle" data-toggle="dropdown">Bike<b class="caret"></b></a>
          <ul class="dropdown-menu">
            <li><%= link_to 'Why Commute by Bike?', bicycle_path %></li>
            <li class="divider"></li>
            <li><%= link_to "Gas Savings Calculator", bicycle_calculator_path %></li>
            <li class="divider"></li>
            <li><%= link_to "Trek and Biking", 'http://www.trekbikes.com/us/en/company/you/' %></li>
            <li><%= link_to "MI Smart Commute", 'http://www.mismartcommute.org/facts' %></li>
          </ul>
        </li>
      <% end %>
    </ul>
    <ul class='nav navbar-nav pull-right'>
      <% if user_signed_in? %>
      <li><%= link_to current_user.full_name, '/' + current_user.profile_name %></li>
      <li><%= link_to 'Log Out', logout_path %></li>
      <% else %>
      <li><%= link_to 'Register', register_path %></li>
      <li><%= link_to 'Sign In', login_path %></li>
      <% end %>
    </ul>
  </div>
</nav>

<div class='container'>
  <% flash.each do |type, message| %>
    <div class="alert <%= flash_class(type) %>">
      <button class='close' data-dismiss='alert'>x</button>
      <%= message %>
    </div>
  <% end %>
  <%= yield %>
</div>

</body>
</html>
