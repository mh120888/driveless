<div class='row'>
  <div class='span4'>
    <%= simple_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post, class: 'well' }) do |f| %>
      <%= devise_error_messages! %>
      <fieldset>
        <legend>Resend unlock instructions</legend>
      <%= f.input :email %>

      <%= f.button :submit, 'Resend unlock instructions' %>
      </fieldset>

    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
