<div class='row'>
  <div class='span4'>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: 'well' }) do |f| %>
      <%= devise_error_messages! %>

      <fieldset>
        <legend>Change My Password</legend>
        <%= f.input :reset_password_token %>
        <%= f.input :password, 'New password' %>
        <%= f.input :password_confirmation, 'Confirm new password' %>

        <%= f.button :submit, 'Change my password' %>

      </fieldset>

    <% end %>
  </div>
</div>

<%= render "devise/shared/links" %>
