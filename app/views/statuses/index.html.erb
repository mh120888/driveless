<div class='page-header'>
  <h1>What People Are Saying</h1>
</div>
<%= link_to "Say Something", new_status_path, class: 'btn btn-success' %>
<hr/>
<% @statuses.each do |status| %>
  <div class ='status'>
    <div class='row'>
      <div class='span1'>
        <%=link_to image_tag(status.user.gravatar_url), profile_path(status.user) %>
      </div>
      <div class='span7'>
        <strong><%= status.user.full_name %></strong>
        <p><%= status.content %></p>
        <div class='meta'>
          <% if status.user == current_user %>
            <%= link_to 'posted ' + time_ago_in_words(status.created_at) + ' ago', status %>
          <% else %>
            <p>posted <%= time_ago_in_words(status.created_at) %> ago</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>